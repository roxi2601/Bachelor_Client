@page "/Statistics"
@using Bachelor_Client.Models
@layout WorkerConfigurationsLayout
<div class="containerStatistics" style="margin-left: 10%; margin-top: 10%;">
    <div class="row" >
        <div class="col-sm" >
            <SfChart Title="Workers Analysis" >
                <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category"
                                   Title="Name">
                </ChartPrimaryXAxis>
                <ChartPrimaryYAxis Title="Number of failed jobs">
                </ChartPrimaryYAxis>
                <ChartLegendSettings Visible="true"> </ChartLegendSettings>
                <ChartTooltipSettings Enable="true"></ChartTooltipSettings>
                <ChartSeriesCollection>
                    <ChartSeries Type="ChartSeriesType.Column" DataSource="@Workers"
                                 XName="Name" YName="NumberOfFailedJobs" Name="Get Data">
                        <ChartMarker>
                            <ChartDataLabel Visible="true"> </ChartDataLabel>
                        </ChartMarker>
                    </ChartSeries>
                </ChartSeriesCollection>
            </SfChart>
            </div>
    </div>
</div>
